class Collatz {
    public static void main(String[] args) {
        System.out.println(new Computer().compute() );
    }
 }
 class Computer{
    public int compute(){
        int x;
         x = 13;
        while (x < 1) {
            if (x - (x / 2) * 2 == 0) {
                x = x * 3 + 1;
            } else {
                x = x / 2;
            }
        }

    return x;
    }
}
